<script>
  $(document).on("click", ".save", function () {
    event.preventDefault();
    // console.log("click")
    var title = $(this).children().text();
    var summary = $(this).parent().parent().children().eq(1).text();
    var link = $(this).children().eq(0).attr("href");

    $.ajax({
      url: "/save",
      method: "POST",
      data: {
        title: title,
        summary: summary,
        link: link
      }
    }).then(function (response) {
      console.log("hello", response)
    })
  })
</script>